extends ../_layout.jade

block content
  .row
    .columns.small-6.small-offset-3
      form.register-form(method='POST')
        | CWID:
        br
        input(id='cwid', type='text', name='cwid', placeHolder='cwid')
        br
        | Username:
        br
        input(id='username', type='text', name='username')
        br
        | Password:
        br
        input(id='password', type='password', name='password')
        br
        | Verify Password:
        br
        input(id='passwordVerify', type='password', name='passwordVerify')
        br
        br
        button.button#register-form-submit Submit
        
block scripts
  script(src='/js/register.js', type='application/javascript')