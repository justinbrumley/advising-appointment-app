extends ../_layout.jade

block content
  .register-form
    .row
      .columns.small-12.medium-6.medium-offset-3
        .callout
          label
            | CWID
            input(id='cwid', type='text', name='cwid', placeHolder='CWID')
          label
            | Username
            input(id='username', type='text', name='username', placeHolder='Username')
          label
            | Password
            input(id='password', type='password', name='password', placeHolder='Password')
          label
            | Verify Password
            input(id='passwordVerify', type='password', placeHolder='Password')
          label
            | Select Role (Are you an advisor, student, etc..)
            select(id='role', name='roleDropDown')
              option(value='Advisee') Student
              option(value='Advisor') Advisor
              option(value='Administrator') Administrator
              option(value='Student_Worker') Student Worker
          button.button#registerSubmit Submit

block scripts
  script(src='/js/register.js', type='application/javascript')